<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/about_user">

        <EditTextPreference
            app:key="user_name"
            app:title="@string/name_title"
            app:useSimpleSummaryProvider="true" />

        <DropDownPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="avatar"
            app:title="@string/avatar"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/theme_settings_header">

        <ListPreference
            app:defaultValue="blue"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="@string/choose_theme"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="night"
            app:title="@string/night_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/behaviour_setting_header">


        <ListPreference
            app:defaultValue="1"
            app:entries="@array/snooze_entries"
            app:entryValues="@array/snooze_values"
            app:key="snooze"
            app:title="@string/choose_snooze_delay"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="15"
            app:entries="@array/notification_entries"
            app:entryValues="@array/notification_values"
            app:key="notifications_repeat_time"
            app:title="@string/choose_notifications_repeat_time"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
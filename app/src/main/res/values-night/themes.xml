    <style name="Theme.WordCardsRed.NoActionBar" parent="Theme.WordCardsRed">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WordCardsDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="mainText">@color/black</item>
        <item name="dialogBg">@drawable/ic_dialog_bg</item>
        <item name="colorSecondaryVariant">@color/sea_700</item>
    </style>

    <style name="Theme.WordCards.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.WordCards.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
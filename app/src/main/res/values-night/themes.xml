        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/green_700</item>
        <!-- Customize your theme here. -->
        <item name="mainText">@color/white</item>
        <item name="secondaryText">@color/light_gray</item>
        <item name="actBgColor">@color/green_700</item>
        <item name="toolBarBgColor">@color/green_700</item>
        <item name="cardBgColor">@color/dark_green_50</item>
        <item name="itemBgColor">@color/dark_gray</item>
        <item name="cardBgColorSecondary">@color/dark_green_100</item>
        <item name="dialogBg">@drawable/ic_dialog_dark_bg</item>
    </style>

    <style name="Theme.WordCardsGreen.NoActionBar" parent="Theme.WordCardsGreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WordCardsRed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rose_900</item>
        <item name="colorSecondaryVariant">@color/rose_900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/red_900</item>
        <!-- Customize your theme here. -->
        <item name="mainText">@color/white</item>
        <item name="secondaryText">@color/light_gray</item>
        <item name="actBgColor">@color/red_900</item>
        <item name="toolBarBgColor">@color/red_900</item>
        <item name="cardBgColor">@color/dark_red_50</item>

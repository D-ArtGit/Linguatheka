<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordCardsBlue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sea_700</item>
        <item name="colorSecondaryVariant">@color/sea_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="mainText">@color/white</item>
        <item name="secondaryText">@color/light_gray</item>
        <item name="actBgColor">@color/blue_700</item>
        <item name="toolBarBgColor">@color/blue_700</item>
        <item name="cardBgColor">@color/dark_blue_50</item>
        <item name="itemBgColor">@color/dark_gray</item>
        <item name="cardBgColorSecondary">@color/dark_blue_100</item>
        <item name="dialogBg">@drawable/ic_dialog_dark_bg</item>
    </style>

    <style name="Theme.WordCardsBlue.NoActionBar" parent="Theme.WordCardsBlue">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name="ru.dartx.linguatheka.activities.MainApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_icon_100"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon_100"
        android:supportsRtl="true"
        android:theme="@style/Theme.WordCardsBlue">
        <activity
            android:name="ru.dartx.linguatheka.activities.BackupActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:theme="@style/Theme.WordCardsDialogBlue" />
        <activity
            android:name="ru.dartx.linguatheka.activities.RestoreActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:theme="@style/Theme.WordCardsDialogBlue" />
        <activity
            android:name="ru.dartx.linguatheka.activities.HowToUseActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:label="@string/how_to_use"
            android:launchMode="singleInstance" />
        <activity
            android:name="ru.dartx.linguatheka.activities.AvatarActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:theme="@style/Theme.WordCardsDialogBlue" />
        <activity
            android:name="ru.dartx.linguatheka.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:parentActivityName="ru.dartx.linguatheka.activities.MainActivity" />
        <activity
            android:name="ru.dartx.linguatheka.activities.CardActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false"
            android:parentActivityName="ru.dartx.linguatheka.activities.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="ru.dartx.linguatheka.activities.SnoozeDialogActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:theme="@style/Theme.WordCardsDialogBlue" />
        <activity
            android:name="ru.dartx.linguatheka.activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:theme="@style/Theme.WordCardsBlue.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="ru.dartx.linguatheka.workers.TapDoneReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name=".workers.NotificationsWorker.ACTION_DONE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>